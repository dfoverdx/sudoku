{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    // "lib": [
    //   "dom",
    //   "es2015"
    // ],
    "types": [
      "jest",
      "node",
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "typeRoots": [
      "../node_modules/@types",
      "../typings",
      "./typings",
    ],
    "listEmittedFiles": true,
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "../coverage",
    "__tests__/**",
    "__mocks__/**",
  ],
  "include": [
    "./**/*.ts",
    "../typings/**/*.d.ts",
  ]
}